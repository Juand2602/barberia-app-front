{
  "compilerOptions": {
    "target": "ES2022", // Usa una versión más moderna de ES
    "module": "ESNext", // <-- ¡CAMBIO CLAVE! Usa ESNext para import/export
    "moduleResolution": "Node", // "Node" es suficiente y compatible
    "lib": ["ES2022"],
    "outDir": "./dist-electron",
    "rootDir": "./electron",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@electron/*": ["./electron/*"]
    }
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules", "dist-electron"]
}